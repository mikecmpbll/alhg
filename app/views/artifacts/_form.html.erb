<% if @artifact.persisted? %>
  <div class="row">
    <div class="col-sm-12">
      <%= link_to "Delete", artifact_path(@artifact), method: :delete, data: { confirm: "Are you sure you want to delete this artifact?" }, class: 'btn btn-danger pull-right' %>
    </div>
  </div><br>
<% end %>

<%= form_for @artifact, html: { class: 'form-horizontal' } do |f| %>
  <% if @artifact.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@artifact.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% @artifact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @artifact.persisted? %>
    <div class="form-group">
      <%= f.label :file, nil, class: 'col-sm-2' %>
      <div class="col-sm-10">
        <%= f.file_field :file, class: 'form-control' %>
        <%= f.hidden_field :file_cache %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :filename, nil, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :filename, placeholder: "Optionally give the file a custom name", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, nil, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :description, placeholder: "What's it about? Who's in it?", class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Back", artifacts_path, class: 'btn btn-default pull-right' %>
    </div>
  </div>
<% end %>
