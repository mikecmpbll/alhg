<%= form_for @artifact, html: { class: 'form-horizontal' } do |f| %>
  <%= f.object.errors.full_messages %>
  <div class="form-group">
    <%= f.label :file, nil, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.file_field :file %>
      <%= f.hidden_field :file_cache %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit class: 'siimple-btn siimple-btn--blue' %>
    </div>
  </div>
<% end %>
